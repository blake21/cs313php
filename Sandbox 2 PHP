<?php
$string = $_POST["input6"];

$array = preg_split("/[\s,]+/", $string);
$arrlength = count($array);
asort($array);

foreach ($array as &$value) {
   echo "<tr>"."<td>".$value."</td>"."</tr>".PHP_EOL;

}
?>
</table>
</body>
